<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_image">


    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/btn_lamatar"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_siddhipur" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/btn_tokha"
        android:layout_above="@+id/btn_bouddha"
        android:layout_alignStart="@+id/btn_bhaktapur"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/btn_bouddha"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/btn_patan"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btn_siddhipur"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:layout_alignTop="@+id/btn_patan"
        android:layout_toEndOf="@+id/btn_patan" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:id="@+id/btn_patan"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/btn_lamatar"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:id="@+id/btn_bhaktapur"
        android:layout_below="@+id/btn_bouddha"
        android:layout_toEndOf="@+id/btn_siddhipur"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/btn_ktm_durbar"
        android:layout_above="@+id/btn_patan"
        android:layout_toStartOf="@+id/btn_bhaktapur"
        android:layout_marginEnd="13dp" />
</RelativeLayout>